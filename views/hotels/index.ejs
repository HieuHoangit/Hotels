<!DOCTYPE html>
<html>
<head>
    <title>Danh sách Hotels</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Danh sách Hotels</h1>
        <a href="/hotels/create" class="btn btn-success">Tạo mới Hotel</a>
        <a href="/" class="btn btn-success">Quay về</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Tên Hotel</th>
                    <th>Giá</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% hotels.forEach(hotel => { %>
                    <tr>
                        <td><%= hotel.name %></td>
                        <td><%= hotel.price %></td>
                        <td>
                            <a href="/hotels/edit/<%= hotel.id %>" class="btn btn-warning">Chỉnh sửa</a>
                            <form action="/hotels/delete/<%= hotel.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc chắn muốn xóa?')">Xóa</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
